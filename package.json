{
  "name": "@jsany/aw",
  "version": "1.0.1",
  "description": "a tiny tool for Create Alfred workflows",
  "keywords": [
    "alfred",
    "workflow",
    "alfred-workflow",
    "javascript",
    "aw",
    "tiny"
  ],
  "homepage": "https://github.com/daolou/aw#readme",
  "bugs": {
    "url": "https://github.com/daolou/aw/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daolou/aw.git"
  },
  "license": "MIT",
  "author": "daolou <jiangzhiguo2010@qq.com>",
  "type": "module",
  "main": "lib/index.js",
  "files": [
    "lib",
    "runtime"
  ],
  "scripts": {
    "check:ts": "tsc --noEmit --pretty",
    "compile": "rimraf lib && rollup -c rollup.config.cjs",
    "lint": "xo --fix src/**/*.{js,ts}",
    "np": "./scripts/publish.sh",
    "prepare": "husky install",
    "release": "standard-version",
    "test": "./runtime/tjs ./test/index.js 'TJS_ENV=test'"
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ],
    "src/**/*.{js,ts}": [
      "xo --fix"
    ]
  },
  "xo": {
    "globals": [
      "tjs"
    ],
    "ignores": [
      "redaxios.js"
    ],
    "rules": {
      "@typescript-eslint/no-unsafe-return": 0,
      "import/extensions": [
        2,
        "never",
        {
          "ignorePackages": true
        }
      ],
      "object-shorthand": [
        2,
        "always"
      ],
      "unicorn/no-abusive-eslint-disable": 0
    },
    "space": true
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "devmoji": "^2.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.73.0",
    "rollup-plugin-ts": "^2.0.7",
    "sort-package-json": "^1.57.0",
    "standard-version": "^9.5.0",
    "typescript": "^4.6.4",
    "xo": "^0.49.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
